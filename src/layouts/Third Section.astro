---
import { Image } from "astro:assets";
import WeeklyService from "../../public/Weekly-Service.jpg";
import ContactButtonsSection from "../components/Contact Buttons Section.astro";
import Review from "../components/Review.astro";
---

<div
  class="bg-[url('/Third-Section.webp')] bg-cover bg-center w-full h-full flex flex-col items-center"
>
  <div class="w-full flex grow flex-col justify-center items-center p-4 mt-16">
    <section class="flex flex-col grow items-center w-full max-w-7xl">
      <div
        class="bg-secondary/90 rounded-4xl p-14 content-reveal-animation mt-16 w-full"
      >
        <h1 class="text-8xl text-center font-bebas-neue text-background">
          Our Service Area
        </h1>
        <div class="w-full flex justify-center">
          <iframe
            class="w-[80%] h-[550px] rounded-2xl shadow-lg mt-8"
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d227175.09546370307!2d-82.61842602700723!3d27.16853112837035!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x48adf9fb8fd3e935%3A0x99ae9445484170aa!2sAqualux%20Sarasota!5e0!3m2!1ses!2sco!4v1757546030082!5m2!1ses!2sco"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
      </div>

      <ContactButtonsSection class="content-reveal-animation mt-16" />
    </section>
    
  </div>
</div>
