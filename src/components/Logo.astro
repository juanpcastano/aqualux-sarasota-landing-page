---
import LogoImage from "../images/HeroImageNoText.png";
import { Image } from "astro:assets";
import LogoContact from "./Logo Contact.astro";
---

<div
  class="w-screen h-screen logo-reveal-animation flex flex-col items-center justify-center"
>
  <div
    class="logo-hide-scroll-animation w-full flex flex-col items-center justify-center -mt-10"
  >
    <Image
      src={LogoImage}
      alt="Aqualux Sarasota Logo"
      class="w-[90%] md:w-[60%] lg:w-[40%] 2xl:w-[50%] h-fit"
    />
    <div class="relative grid grid-cols-3 gap-4 items-center justify-items-center">

        <LogoContact label="Contact Us"/>

      <div class="flex flex-col items-center justify-center">
        <h1
          class="font-bebas-neue text-secondary 2xl:text-9xl sm:text-8xl text-7xl mt-2"
        >
          AQUALUX
        </h1>
        <h2
          class="font-source-sans 2xl:text-5xl sm:text-4xl text-2xl text-secondary"
        >
          SARASOTA
        </h2>
      </div>

      <LogoContact label="Call Us"/>
    </div>
  </div>
</div>
